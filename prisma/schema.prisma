generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id          String  @id @default(cuid())
  name        String  @unique
  displayName String
  email       String? @unique
  password    String
  instagramId String?
  items       Item[]
}

model Item {
  id           String     @id @default(cuid())
  name         String
  price        Int
  category     String
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}
